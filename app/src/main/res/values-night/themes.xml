<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.AppCompat.DayNight.NoActionBar">

    <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_theme_dark_onPrimary</item>
        <item name="colorBackgroundFloating">@color/md_theme_light_primary</item>
        <item name="colorAccent">@color/md_theme_dark_primaryContainer</item>
        <!-- Secondary brand color. -->
        <item name="colorControlNormal">@color/md_theme_dark_onPrimary</item>
        <item name="colorControlActivated">@color/md_theme_light_primaryContainer</item>
        <item name="colorPrimaryDark">@color/md_theme_dark_primaryContainer</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorButtonNormal</item>
        <!-- Customize your theme here. -->
    </style>
</resources>

